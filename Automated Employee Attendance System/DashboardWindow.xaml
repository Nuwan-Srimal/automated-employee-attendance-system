<UserControl x:Class="Automated_Employee_Attendance_System.DashboardWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             Height="Auto" Width="Auto"
             Foreground="{DynamicResource Forground}">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">

            <!-- Header -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <TextBlock Text="Dashboard Overview"
                           FontSize="22"
                           FontWeight="SemiBold"/>
                <TextBlock Text="   |   Today"
                           VerticalAlignment="Center"
                           Foreground="Gray"/>
            </StackPanel>

            <!-- Cards -->
            <UniformGrid Columns="4" Margin="0,0,0,20">

                <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Background="{DynamicResource Background}"
                        CornerRadius="12"
                        Padding="16"
                        Margin="6">
                    <StackPanel>
                        <TextBlock Text="Total Employees" Foreground="Gray"/>
                        <TextBlock Text="142" FontSize="26" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Background="{DynamicResource Background}"
        CornerRadius="12"
        Padding="16"
        Margin="6">
                    <StackPanel>
                        <TextBlock Text="Present Today" Foreground="Gray"/>
                        <TextBlock Text="120" FontSize="26" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Background="{DynamicResource Background}"
        CornerRadius="12"
        Padding="16"
        Margin="6">
                    <StackPanel>
                        <TextBlock Text="Absent Today" Foreground="Gray"/>
                        <TextBlock Text="12" FontSize="26" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Background="{DynamicResource Background}"
        CornerRadius="12"
        Padding="16"
        Margin="6">
                    <StackPanel>
                        <TextBlock Text="Late Arrivals" Foreground="Gray"/>
                        <TextBlock Text="10" FontSize="26" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

            </UniformGrid>

            <!-- System Status -->
            <Border CornerRadius="10" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Background="{DynamicResource Background}" Padding="16" Margin="6,0,0,0">
                <StackPanel Orientation="Horizontal">
                    <Ellipse Width="10" Height="10" Fill="#35D499"/>
                    <TextBlock Text="  System Online (Arduino Connected)"
                               />
                </StackPanel>
            </Border>

            <!-- Attendance Overview + System Status -->
            <Grid Margin="6,24,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="1.2*"/>
                </Grid.ColumnDefinitions>

                <!-- LEFT: Attendance Chart -->
                <Border Grid.Column="0"
            Background="{DynamicResource Background}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
            CornerRadius="14"
            Padding="16"
            Margin="0,0,16,0">

                    <StackPanel>
                        <TextBlock Text="Attendance Overview"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Margin="0,0,0,12"/>

                        <lvc:CartesianChart Series="{Binding AttendanceSeries}"
                                LegendLocation="None"
                                Height="220"
                                Background="Transparent">

                            <!-- X AXIS -->
                            <lvc:CartesianChart.AxisX>
                                <lvc:Axis Labels="{Binding Labels}"
                              Foreground="#8A8F98">
                                    <lvc:Axis.Separator>
                                        <lvc:Separator Step="1"
                                                       IsEnabled="False"/>
                                    </lvc:Axis.Separator>
                                </lvc:Axis>
                            </lvc:CartesianChart.AxisX>

                            <!-- Y AXIS (hidden) -->
                            <lvc:CartesianChart.AxisY>
                                <lvc:Axis ShowLabels="True">
                                    <lvc:Axis.Separator>
                                        <lvc:Separator IsEnabled="False"/>
                                    </lvc:Axis.Separator>
                                </lvc:Axis>
                            </lvc:CartesianChart.AxisY>

                        </lvc:CartesianChart>
                    </StackPanel>
                </Border>

                <!-- RIGHT: System Status Card -->
                <Border Grid.Column="1"
                        Margin="0,0,0,150"
            Background="{DynamicResource Background}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
            CornerRadius="14"
            Padding="16">

                    <StackPanel>

                        <TextBlock Text="System Status"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Margin="0,0,0,12"/>

                        <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center">

                            <!-- Status dot -->
                            <Ellipse Width="10"
                         Height="10"
                         Fill="{Binding SystemStatusColor}"
                         VerticalAlignment="Center"/>

                            <StackPanel Margin="10,0,0,0">
                                <TextBlock Text="{Binding SystemStatusText}"
                               FontWeight="SemiBold"/>
                            </StackPanel>

                        </StackPanel>

                    </StackPanel>
                </Border>
            </Grid>



        </StackPanel>
    </ScrollViewer>
</UserControl>
