<Window x:Class="Automated_Employee_Attendance_System.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Automated_Employee_Attendance_System"
        mc:Ignorable="d"
        Foreground="{DynamicResource Forground}"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        Title="LoginWindow" Height="500"  Width="800">


    <Grid>

        <Border CornerRadius="15" Background="{DynamicResource ContBackground}">
            <Grid>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="400" />
                </Grid.ColumnDefinitions>

               
       


                    <Image  Grid.Column="0" Width="500" Source="/UI/Login_D.png"
                           HorizontalAlignment="Center"/>
                

                <Border Grid.Column="1" Width="360"
      Padding="30"
      Background="{DynamicResource Background}"
      CornerRadius="16"
      VerticalAlignment="Center"
      >
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="25"
                        ShadowDepth="0"
                        Opacity="0.2"/>
                    </Border.Effect>

                    <StackPanel>

                        <!-- Icon -->
                        <Border Width="44" Height="44"
              Background="#E9F1FF"
              CornerRadius="22"
              HorizontalAlignment="Center"
              Margin="0,0,0,16">
                            <TextBlock Text="🔒"
                     FontSize="20"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Center"/>
                        </Border>

                        <!-- Title -->
                        <TextBlock Text="Admin Portal"
                 FontSize="22"
                 FontWeight="Bold"
                 HorizontalAlignment="Center"/>

                        <TextBlock Text="Secure access for employee management."
                 FontSize="12"
                 Foreground="Gray"
                 HorizontalAlignment="Center"
                 Margin="0,6,0,25"/>

                        <!-- Email -->
                        <TextBlock Text="User Name"
                 FontSize="12"
                 FontWeight="SemiBold"
                 Margin="0,0,0,6"/>

                        <TextBox x:Name="UserName" Height="42" Style="{DynamicResource TextBoxStyle}" />

                        <!-- Password -->
                        <TextBlock Text="Password"
                 FontSize="12"
                 FontWeight="SemiBold"
                 Margin="0,18,0,6"/>

                        <PasswordBox x:Name="Password" Height="42"
                    />

                        <!-- Remember + Forgot -->
                        <Grid Margin="0,14,0,18">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>



                            <TextBlock Text="Forgot Password?"
                     Grid.Column="1"
                     Foreground="#1A73E8"
                     FontSize="11"
                     HorizontalAlignment="Right"
                     Cursor="Hand"/>
                        </Grid>

                        <!-- Login Button -->
                        <Button Content="Login"
              Height="44"
                                Click="Login_Click"
              Background="#1A73E8"
              Foreground="White"
              FontWeight="SemiBold"
              BorderThickness="0"
                                IsDefault="True"
              Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                          CornerRadius="10">
                                        <ContentPresenter HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <!-- Status -->
                        <StackPanel Orientation="Horizontal"
                  HorizontalAlignment="Center"
                  Margin="0,18,0,0">
                            <Ellipse Width="6" Height="6" Fill="Green" Margin="0,0,6,0"/>
                            <TextBlock Text="System Operational"
                     FontSize="10"
                     Foreground="Gray"/>
                        </StackPanel>

                    </StackPanel>
                </Border>

            </Grid>
        </Border>
       
    </Grid>
   
</Window>
