<Window x:Class="Automated_Employee_Attendance_System.WiFiScanWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ESP WiFi Setup" 
        Height="450" 
        Width="500"
		FontFamily="{StaticResource CustomFont}"
		
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    <Border Background="{DynamicResource Background}" 
            BorderBrush="{DynamicResource BorderBrush}" 
            BorderThickness="1" 
            CornerRadius="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0" 
                    Background="{DynamicResource ContBackground}" 
                    CornerRadius="10,10,0,0" 
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <TextBlock Text="ESP WiFi Setup" 
                               Foreground="{DynamicResource Forground}"
                               FontSize="16" 
                               FontWeight="SemiBold"
                               VerticalAlignment="Center" 
                               Margin="20,0"/>
                    <Button Content="X" 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Center"
                            Margin="10"
                            Width="30" 
                            Height="30"
                            Click="Close_Click"
                            Style="{DynamicResource ActionButton}"/>
                </Grid>
            </Border>

            <!-- Content -->
            <StackPanel Grid.Row="1" Margin="20">
                <TextBlock Text="Status:" 
                           Foreground="{DynamicResource Forground}"
                           FontSize="14" 
                           FontWeight="Medium" 
                           Margin="0,0,0,5"/>
                <TextBlock x:Name="StatusText" 
                           Text="Connecting to ESP..." 
                           Foreground="Gray"
                           FontSize="12" 
                           Margin="0,0,0,20"/>

                <TextBlock Text="Available Networks" 
                           Foreground="{DynamicResource Forground}"
                           FontSize="14" 
                           FontWeight="Medium" 
                           Margin="0,0,0,5"/>
                <Border BorderBrush="{DynamicResource BorderBrush}" 
                        BorderThickness="1" 
                        CornerRadius="5" 
                        Margin="0,0,0,10">
                    <ListBox x:Name="WiFiList" 
                             Height="120" 
                             Background="{DynamicResource Background}"
                             BorderBrush="{x:Null}"
                             SelectionChanged="WiFiList_SelectionChanged"/>
                </Border>

                <TextBlock Text="WiFi Password" 
                           Foreground="{DynamicResource Forground}"
                           FontSize="14" 
                           FontWeight="Medium" 
                           Margin="0,10,0,5"/>
                <PasswordBox x:Name="PasswordBox" 
                            
                             />
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Grid.Row="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        Margin="20,10">
                <Button Content="Cancel" 
                        Width="100" 
                        Margin="0,0,10,0"
                        Click="Cancel_Click"
                        IsDefault="True"
                        Style="{DynamicResource NavigationButtonStyle}"/>
                <Button Content="Connect" 
                        Width="100"
                        Click="Connect_Click"
                        IsDefault="True"
                        Style="{DynamicResource ActionButton}"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
