<UserControl x:Class="Automated_Employee_Attendance_System.AttendanceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Automated_Employee_Attendance_System"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">

            <!-- Header -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <Border Background="{DynamicResource ContBackground}">
                    <TextBlock Text="Dashboard Overview"
                               Foreground="{DynamicResource Forground}"
                       FontSize="22"
                       FontWeight="SemiBold"/>
                </Border>
                <TextBlock Text="   |   Today"
                       VerticalAlignment="Center"
                       Foreground="Gray"/>
            </StackPanel>

            <!-- Cards -->
            <UniformGrid Columns="4" Margin="0,0,0,20">

                <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Background="{DynamicResource Background}"
                    CornerRadius="12"
                    Padding="16"
                    Margin="6">
                    <StackPanel>
                        <TextBlock Text="Total Employees" Foreground="Gray"/>
                        <TextBlock Text="142" FontSize="26" FontWeight="Bold" Foreground="{DynamicResource Forground}"/>
                    </StackPanel>
                </Border>

                <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Background="{DynamicResource Background}"
    CornerRadius="12"
    Padding="16"
    Margin="6">
                    <StackPanel>
                        <TextBlock Text="Present Today" Foreground="Gray"/>
                        <TextBlock Text="120" FontSize="26" FontWeight="Bold" Foreground="{DynamicResource Forground}"/>
                    </StackPanel>
                </Border>

                <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Background="{DynamicResource Background}"
    CornerRadius="12"
    Padding="16"
    Margin="6">
                    <StackPanel>
                        <TextBlock Text="Absent Today" Foreground="Gray"/>
                        <TextBlock Text="12" FontSize="26" FontWeight="Bold" Foreground="{DynamicResource Forground}"/>
                    </StackPanel>
                </Border>

                <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Background="{DynamicResource Background}"
    CornerRadius="12"
    Padding="16"
    Margin="6">
                    <StackPanel>
                        <TextBlock Text="Late Arrivals" Foreground="Gray"/>
                        <TextBlock Text="10" FontSize="26" FontWeight="Bold" Foreground="{DynamicResource Forground}"/>
                    </StackPanel>
                </Border>

            </UniformGrid>
            <Border Background="{DynamicResource Background}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" 
                    Margin="0,0,0,20"
                    CornerRadius="12">
                <Grid Margin="0,20,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>


                    <!-- Select Date -->
                    <StackPanel Grid.Column="0" Margin="10,0,15,0">
                        <TextBlock Text="Select Date"
                   Foreground="{DynamicResource Forground}"
                   FontSize="12"
                   Margin="0,0,0,8"/>
                        <DatePicker Width="180"/>
                    </StackPanel>

                    <!-- Filter Department -->
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Filter Department"
                   Foreground="{DynamicResource Forground}"
                   FontSize="12"
                   Margin="0,0,0,8"/>
                        <ComboBox Width="180">
                            <ComboBoxItem Content="All Departments"/>
                            <ComboBoxItem Content="Engineering"/>
                            <ComboBoxItem Content="HR"/>
                        </ComboBox>
                    </StackPanel>
                </Grid>

            </Border>
        </StackPanel>
    </ScrollViewer>

</UserControl>
