<UserControl x:Class="Automated_Employee_Attendance_System.AttendanceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:cal="clr-namespace:ModernCalendarLib;assembly=ModernCalendarLib"
             xmlns:local="clr-namespace:Automated_Employee_Attendance_System"
             mc:Ignorable="d" 
             FontFamily="{StaticResource CustomFont}"
             d:DesignWidth="800">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Hidden">
            <StackPanel Margin="20">

                <!-- Header -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <Border Background="{DynamicResource ContBackground}">
                        <TextBlock Text="Attendance Overview"
                             Foreground="{DynamicResource Forground}"
                     FontSize="22"
                     FontWeight="SemiBold"/>
                    </Border>
                    <TextBlock Text="   |   Today"
                     VerticalAlignment="Center"
                     Foreground="Gray"/>
                </StackPanel>

                <!-- Cards -->
                <UniformGrid Columns="3" Margin="0,0,0,20">

                    <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Background="{DynamicResource Background}"
                  CornerRadius="12"
                  Padding="16"
                  Margin="6">
                        <StackPanel>
                            <TextBlock Text="Total Employees" Foreground="Gray"/>
                            <TextBlock Text="{Binding TotalEmployees}" FontSize="26" FontWeight="Bold" Foreground="{DynamicResource Forground}"/>
                        </StackPanel>
                    </Border>

                    <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Background="{DynamicResource Background}"
  CornerRadius="12"
  Padding="16"
  Margin="6">
                        <StackPanel>
                            <TextBlock Text="Present Today" Foreground="Gray"/>
                            <TextBlock Text="{Binding PresentToday}" FontSize="26" FontWeight="Bold" Foreground="{DynamicResource Forground}"/>
                        </StackPanel>
                    </Border>

                    <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Background="{DynamicResource Background}"
  CornerRadius="12"
  Padding="16"
  Margin="6">
                        <StackPanel>
                            <TextBlock Text="Absent Today" Foreground="Gray"/>
                            <TextBlock Text="{Binding AbsentToday}" FontSize="26" FontWeight="Bold" Foreground="{DynamicResource Forground}"/>
                        </StackPanel>
                    </Border>

                </UniformGrid>





                <Border Background="{DynamicResource Background}"
        BorderBrush="{DynamicResource BorderBrush}"
        BorderThickness="1"
        Margin="5,0,0,20"
        CornerRadius="12"
        Padding="15">
                    <Grid>
                        <!-- Columns -->
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!-- LEFT SIDE -->
                        <StackPanel Grid.Column="0">
                            <!-- Dates -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <StackPanel Orientation="Vertical" Margin="0,0,15,0">
                                    <TextBlock Text="Start Date"
                               Foreground="{DynamicResource Forground}"
                               FontSize="12"
                               Margin="0,0,0,8"/>
                                    <Border BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="2"
                            CornerRadius="5">
                                        <cal:CustomDatePicker x:Name="StartDatePicker" 
                                                              Width="250"
                                                              />
                                    </Border>
                                </StackPanel>
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="End Date"
                               Foreground="{DynamicResource Forground}"
                               FontSize="12"
                               Margin="0,0,0,8"/>
                                    <Border BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="2"
                            CornerRadius="5">
                                        <cal:CustomDatePicker x:Name="EndDatePicker" 
                                                              Width="250"
                                                              />
                                    </Border>
                                </StackPanel>
                            </StackPanel>

                            <!-- Search and Buttons -->
                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                <TextBox x:Name="TxtSearch"
                         Height="35"
                         Width="300"
                         Style="{DynamicResource OutsourceSerchBar}"
                         TextChanged="TxtSearch_TextChanged"
                         VerticalContentAlignment="Center"
                         Margin="0,0,10,0"/>

                                <Button Content="🔍 Search"
                        Click="SearchAttendance_Click"
                        Style="{StaticResource ActionButton}"
                        Width="120"
                        Height="35"
                        Margin="0,0,10,0"/>

                                <Button Content="🧹 Clear Filters"
                        Click="ClearFilters_Click"
                        Style="{StaticResource ActionButton}"
                        Width="120"
                        Height="35"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- RIGHT SIDE -->
                        <StackPanel Grid.Column="1"
                    VerticalAlignment="Top"
                    Margin="20,0,0,0">
                            <Button Content="🔄 Refresh"
                    Click="RefreshAttendance_Click"
                    Style="{StaticResource ActionButton}"
                    Width="120"
                    Height="35"/>
                        </StackPanel>
                    </Grid>
                </Border>




                <!-- ================= ATTENDANCE BOARD ================= -->
                <Border Margin="5,20,0,0"
                  Height="360"
      Background="{DynamicResource Background}"
      BorderBrush="{DynamicResource BorderBrush}"
      BorderThickness="1"
      CornerRadius="14"
      Padding="12">

                    <StackPanel>

                        <!-- Title -->
                        <TextBlock Text="Attendance Records"
                 FontSize="14"
                 FontWeight="SemiBold"
                 Foreground="{DynamicResource Forground}"
                 Margin="6,0,0,12"/>

                        <!-- TABLE -->
                        <DataGrid x:Name="AttendanceGrid"
Background="Transparent"
RowBackground="White"
AlternatingRowBackground="#f0f0f0"
SnapsToDevicePixels="True"
AutoGenerateColumns="False"
CanUserResizeColumns="False"
ScrollViewer.CanContentScroll="True"
ScrollViewer.VerticalScrollBarVisibility="Hidden"
Height="auto"
CellStyle="{StaticResource DataGridCellStyle}"
Style="{StaticResource DataGridStyle}"
ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}"
RowStyle="{StaticResource DataGridRowStyle}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Employee ID" Binding="{Binding emp_id}" Width="*" ElementStyle="{DynamicResource DataGridColumnsStyle}" />
                                <DataGridTextColumn Header="Finger ID" Binding="{Binding finger_id}" Width="*" ElementStyle="{DynamicResource DataGridColumnsStyle}" />
                                <DataGridTextColumn Header="Date" Binding="{Binding date}" Width="*" ElementStyle="{DynamicResource DataGridColumnsStyle}" />
                                <DataGridTextColumn Header="Time" Binding="{Binding time}" Width="*" ElementStyle="{DynamicResource DataGridColumnsStyle}" />
                            </DataGrid.Columns>
                        </DataGrid>

                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>


</UserControl>