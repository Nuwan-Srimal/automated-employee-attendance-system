<UserControl x:Class="Automated_Employee_Attendance_System.AttendanceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:cal="clr-namespace:ModernCalendarLib;assembly=ModernCalendarLib"
             xmlns:local="clr-namespace:Automated_Employee_Attendance_System"
             mc:Ignorable="d" 
             d:DesignWidth="800">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Hidden">
            <StackPanel Margin="20">

                <!-- Header -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <Border Background="{DynamicResource ContBackground}">
                        <TextBlock Text="Dashboard Overview"
                             Foreground="{DynamicResource Forground}"
                     FontSize="22"
                     FontWeight="SemiBold"/>
                    </Border>
                    <TextBlock Text="   |   Today"
                     VerticalAlignment="Center"
                     Foreground="Gray"/>
                </StackPanel>

                <!-- Cards -->
                <UniformGrid Columns="4" Margin="0,0,0,20">

                    <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Background="{DynamicResource Background}"
                  CornerRadius="12"
                  Padding="16"
                  Margin="6">
                        <StackPanel>
                            <TextBlock Text="Total Employees" Foreground="Gray"/>
                            <TextBlock Text="142" FontSize="26" FontWeight="Bold" Foreground="{DynamicResource Forground}"/>
                        </StackPanel>
                    </Border>

                    <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Background="{DynamicResource Background}"
  CornerRadius="12"
  Padding="16"
  Margin="6">
                        <StackPanel>
                            <TextBlock Text="Present Today" Foreground="Gray"/>
                            <TextBlock Text="120" FontSize="26" FontWeight="Bold" Foreground="{DynamicResource Forground}"/>
                        </StackPanel>
                    </Border>

                    <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Background="{DynamicResource Background}"
  CornerRadius="12"
  Padding="16"
  Margin="6">
                        <StackPanel>
                            <TextBlock Text="Absent Today" Foreground="Gray"/>
                            <TextBlock Text="12" FontSize="26" FontWeight="Bold" Foreground="{DynamicResource Forground}"/>
                        </StackPanel>
                    </Border>

                    <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Background="{DynamicResource Background}"
  CornerRadius="12"
  Padding="16"
  Margin="6">
                        <StackPanel>
                            <TextBlock Text="Late Arrivals" Foreground="Gray"/>
                            <TextBlock Text="10" FontSize="26" FontWeight="Bold" Foreground="{DynamicResource Forground}"/>
                        </StackPanel>
                    </Border>

                </UniformGrid>
                <Border Background="{DynamicResource Background}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" 
                  Margin="5,0,0,20"
                  CornerRadius="12">
                    <Grid Margin="0,20,0,10">



                        <!-- Select Date -->
                        <StackPanel Grid.Column="0" Margin="10,0,15,0">
                            <TextBlock Text="Select Date"
                 Foreground="{DynamicResource Forground}"
                 FontSize="12"
                                 HorizontalAlignment="Left"
                 Margin="0,0,0,8"/>
                            <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="2" HorizontalAlignment="Left" CornerRadius="5">
                                <cal:CustomDatePicker x:Name="StartDatePicker"  Width="250"/>
                            </Border>
                        </StackPanel>

                        <!-- Filter Department -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Filter Department"
                 Foreground="{DynamicResource Forground}"
                                 HorizontalAlignment="Center"
                 FontSize="12"
                 Margin="114,0,0,8"/>
                            <ComboBox Style="{DynamicResource ComboBoxFlatStyle}" Width="280"
                               
                                HorizontalAlignment="Center" Margin="300,0,0,0">
                                <ComboBoxItem Content="All Departments"/>
                                <ComboBoxItem Content="Engineering"/>
                                <ComboBoxItem Content="HR"/>
                            </ComboBox>
                        </StackPanel>
                    </Grid>

                </Border>
                <!-- ================= ATTENDANCE BOARD ================= -->
                <Border Margin="5,20,0,0"
                  Height="360"
      Background="{DynamicResource Background}"
      BorderBrush="{DynamicResource BorderBrush}"
      BorderThickness="1"
      CornerRadius="14"
      Padding="12">

                    <StackPanel>

                        <!-- Title -->
                        <TextBlock Text="Attendance Records"
                 FontSize="14"
                 FontWeight="SemiBold"
                 Foreground="{DynamicResource Forground}"
                 Margin="6,0,0,12"/>

                        <!-- TABLE -->
                        <DataGrid x:Name="EmployeeGrid"
Background="Transparent"
RowBackground="White"
AlternatingRowBackground="#f0f0f0"
SnapsToDevicePixels="True"
AutoGenerateColumns="False"
ItemsSource="{Binding UpcomingBirthdays}"
CanUserResizeColumns="False"
ScrollViewer.CanContentScroll="True"
ScrollViewer.VerticalScrollBarVisibility="Hidden"
Height="auto"
CellStyle="{StaticResource DataGridCellStyle}"
Style="{StaticResource DataGridStyle}"
ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}"
RowStyle="{StaticResource DataGridRowStyle}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding emp_id}" Width="*" ElementStyle="{DynamicResource DataGridColumnsStyle}" />
                                <DataGridTextColumn Header="Employee Name" Binding="{Binding name}" Width="*" ElementStyle="{DynamicResource DataGridColumnsStyle}" />
                                <DataGridTextColumn Header="Check In" Binding="{Binding name}" Width="*" ElementStyle="{DynamicResource DataGridColumnsStyle}" />
                                <DataGridTextColumn Header="Check Out" Binding="{Binding name}" Width="*" ElementStyle="{DynamicResource DataGridColumnsStyle}" />
                               

                                

                            </DataGrid.Columns>
                        </DataGrid>

                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
  

</UserControl>
