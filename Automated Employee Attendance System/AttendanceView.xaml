<UserControl x:Class="Automated_Employee_Attendance_System.AttendanceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Automated_Employee_Attendance_System"
             mc:Ignorable="d" 
             d:DesignWidth="800">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Hidden">
            <StackPanel Margin="20">

                <!-- Header -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <Border Background="{DynamicResource ContBackground}">
                        <TextBlock Text="Dashboard Overview"
                             Foreground="{DynamicResource Forground}"
                     FontSize="22"
                     FontWeight="SemiBold"/>
                    </Border>
                    <TextBlock Text="   |   Today"
                     VerticalAlignment="Center"
                     Foreground="Gray"/>
                </StackPanel>

                <!-- Cards -->
                <UniformGrid Columns="4" Margin="0,0,0,20">

                    <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Background="{DynamicResource Background}"
                  CornerRadius="12"
                  Padding="16"
                  Margin="6">
                        <StackPanel>
                            <TextBlock Text="Total Employees" Foreground="Gray"/>
                            <TextBlock Text="142" FontSize="26" FontWeight="Bold" Foreground="{DynamicResource Forground}"/>
                        </StackPanel>
                    </Border>

                    <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Background="{DynamicResource Background}"
  CornerRadius="12"
  Padding="16"
  Margin="6">
                        <StackPanel>
                            <TextBlock Text="Present Today" Foreground="Gray"/>
                            <TextBlock Text="120" FontSize="26" FontWeight="Bold" Foreground="{DynamicResource Forground}"/>
                        </StackPanel>
                    </Border>

                    <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Background="{DynamicResource Background}"
  CornerRadius="12"
  Padding="16"
  Margin="6">
                        <StackPanel>
                            <TextBlock Text="Absent Today" Foreground="Gray"/>
                            <TextBlock Text="12" FontSize="26" FontWeight="Bold" Foreground="{DynamicResource Forground}"/>
                        </StackPanel>
                    </Border>

                    <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Background="{DynamicResource Background}"
  CornerRadius="12"
  Padding="16"
  Margin="6">
                        <StackPanel>
                            <TextBlock Text="Late Arrivals" Foreground="Gray"/>
                            <TextBlock Text="10" FontSize="26" FontWeight="Bold" Foreground="{DynamicResource Forground}"/>
                        </StackPanel>
                    </Border>

                </UniformGrid>
                <Border Background="{DynamicResource Background}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" 
                  Margin="5,0,0,20"
                  CornerRadius="12">
                    <Grid Margin="0,20,0,10">



                        <!-- Select Date -->
                        <StackPanel Grid.Column="0" Margin="10,0,15,0">
                            <TextBlock Text="Select Date"
                 Foreground="{DynamicResource Forground}"
                 FontSize="12"
                                 HorizontalAlignment="Left"
                 Margin="0,0,0,8"/>
                            <DatePicker Width="280"
                                  Height="32"
                                  PreviewKeyDown="DatePicker_PreviewKeyDown"
                                  Focusable="False"
                      HorizontalAlignment="Left"/>
                        </StackPanel>

                        <!-- Filter Department -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Filter Department"
                 Foreground="{DynamicResource Forground}"
                                 HorizontalAlignment="Center"
                 FontSize="12"
                 Margin="114,0,0,8"/>
                            <ComboBox Style="{DynamicResource ComboBoxFlatStyle}" Width="280"
                               
                                HorizontalAlignment="Center" Margin="300,0,0,0">
                                <ComboBoxItem Content="All Departments"/>
                                <ComboBoxItem Content="Engineering"/>
                                <ComboBoxItem Content="HR"/>
                            </ComboBox>
                        </StackPanel>
                    </Grid>

                </Border>
                <!-- ================= ATTENDANCE BOARD ================= -->
                <Border Margin="5,20,0,0"
                  Height="360"
      Background="{DynamicResource Background}"
      BorderBrush="{DynamicResource BorderBrush}"
      BorderThickness="1"
      CornerRadius="14"
      Padding="12">

                    <StackPanel>

                        <!-- Title -->
                        <TextBlock Text="Attendance Records"
                 FontSize="14"
                 FontWeight="SemiBold"
                 Foreground="{DynamicResource Forground}"
                 Margin="6,0,0,12"/>

                        <!-- TABLE -->
                        <DataGrid x:Name="AttendanceGrid"
                AutoGenerateColumns="False"
                HeadersVisibility="Column"
                CanUserAddRows="False"
                CanUserResizeRows="False"
                GridLinesVisibility="None"
                RowHeight="54"
                FontSize="13"
                Background="Transparent"
                BorderThickness="0"
                AlternationCount="2">

                            <!-- Header -->
                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Foreground" Value="Gray"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderBrush" Value="{DynamicResource Forground}"/>
                                    <Setter Property="BorderThickness" Value="0,1,0,1"/>
                                    <Setter Property="Padding" Value="10,8"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>

                            <!-- Row -->
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderBrush" Value="#1FFFFFFF"/>
                                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                </Style>
                            </DataGrid.RowStyle>

                            <!-- Cell -->
                            <DataGrid.CellStyle>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Padding" Value="12,8"/>
                                    <Setter Property="Foreground"
                          Value="{DynamicResource Forground}"/>
                                </Style>
                            </DataGrid.CellStyle>

                            <!-- Columns -->
                            <DataGrid.Columns>

                                <DataGridTextColumn Header="EMPLOYEE"
                                  Binding="{Binding EmployeeName}"
                                  Width="230"/>

                                <DataGridTextColumn Header="ID"
                                  Binding="{Binding EmployeeId}"
                                  Width="90"/>

                                <DataGridTextColumn Header="DEPARTMENT"
                                  Binding="{Binding Department}"
                                  Width="160"/>

                                <DataGridTextColumn Header="CHECK-IN"
                                  Binding="{Binding CheckIn}"
                                  Width="120"/>

                                <DataGridTextColumn Header="CHECK-OUT"
                                  Binding="{Binding CheckOut}"
                                  Width="110"/>

                            </DataGrid.Columns>
                        </DataGrid>

                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
  

</UserControl>
