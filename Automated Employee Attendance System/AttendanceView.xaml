<UserControl x:Class="Automated_Employee_Attendance_System.AttendanceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:cal="clr-namespace:ModernCalendarLib;assembly=ModernCalendarLib"
             xmlns:local="clr-namespace:Automated_Employee_Attendance_System"
             mc:Ignorable="d" 
             FontFamily="{StaticResource CustomFont}"
             d:DesignWidth="800">
    <Grid>

        <TabControl Style="{DynamicResource TabControl}">
            <TabItem Header="Attendance Overview" Width="170" Style="{DynamicResource TabItem}" >

                <Grid>
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="20">

                            <!-- Header -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                                <Border Background="{DynamicResource ContBackground}">
                                    <TextBlock Text="Attendance Overview"
                             Foreground="{DynamicResource Forground}"
                     FontSize="22"
                     FontWeight="SemiBold"/>
                                </Border>
                                <TextBlock Text="   |   Today"
                     VerticalAlignment="Center"
                     Foreground="Gray"/>
                            </StackPanel>

                            <!-- Cards -->
                            <UniformGrid Columns="3" Margin="0,0,0,20">

                                <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Background="{DynamicResource Background}"
                  CornerRadius="12"
                  Padding="16"
                  Margin="6">
                                    <StackPanel>
                                        <TextBlock Text="Total Employees" Foreground="Gray"/>
                                        <TextBlock Text="{Binding TotalEmployees}" FontSize="26" FontWeight="Bold" Foreground="{DynamicResource Forground}"/>
                                    </StackPanel>
                                </Border>

                                <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Background="{DynamicResource Background}"
  CornerRadius="12"
  Padding="16"
  Margin="6">
                                    <StackPanel>
                                        <TextBlock Text="Present Today" Foreground="Gray"/>
                                        <TextBlock Text="{Binding PresentToday}" FontSize="26" FontWeight="Bold" Foreground="{DynamicResource Forground}"/>
                                    </StackPanel>
                                </Border>

                                <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Background="{DynamicResource Background}"
  CornerRadius="12"
  Padding="16"
  Margin="6">
                                    <StackPanel>
                                        <TextBlock Text="Absent Today" Foreground="Gray"/>
                                        <TextBlock Text="{Binding AbsentToday}" FontSize="26" FontWeight="Bold" Foreground="{DynamicResource Forground}"/>
                                    </StackPanel>
                                </Border>

                            </UniformGrid>

                            <!-- Manual Entry Section -->
                            <Border Background="{DynamicResource Background}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
                        Margin="5,0,0,20"
                        CornerRadius="12"
                        Padding="15">
                                <StackPanel>
                                    <TextBlock Text="Manual Attendance Entry"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource Forground}"
                                   Margin="0,0,0,15"/>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                            <TextBlock Text="Employee" Foreground="{DynamicResource Forground}" FontSize="12" Margin="0,0,0,5"/>
                                            <ComboBox Style="{DynamicResource ComboBoxFlatStyle}" x:Name="CmbEmployee" 
                                          
                                          DisplayMemberPath="DisplayText"
                                          SelectedValuePath="emp_id"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1" Margin="0,0,10,0">
                                            <TextBlock Text="Date" Foreground="{DynamicResource Forground}" FontSize="12" Margin="0,0,0,5"/>
                                            <Border BorderBrush="{DynamicResource BorderBrush}"
BorderThickness="2"
CornerRadius="5">
                                                <cal:CustomDatePicker x:Name="DpEntryDate" 
                                  Width="250"
                                  />
                                            </Border>


                                        </StackPanel>

                                        <StackPanel Grid.Column="2" Margin="0,0,10,0">
                                            <TextBlock Text="Time" Foreground="{DynamicResource Forground}" FontSize="12" Margin="0,0,0,5"/>
                                            <TextBox x:Name="TxtEntryTime" 
                                         Height="35"
                                         Style="{DynamicResource TextBoxStyle}"
                                         VerticalContentAlignment="Center"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="4" VerticalAlignment="Bottom">
                                            <Button Content="âž• Add Entry"
                                        Click="AddManualEntry_Click"
                                        Style="{StaticResource ActionButton}"
                                        Width="100"
                                        Height="35"/>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- Filters Section -->
                            <Border Background="{DynamicResource Background}"
        BorderBrush="{DynamicResource BorderBrush}"
        BorderThickness="1"
        Margin="5,0,0,20"
        CornerRadius="12"
        Padding="15">
                                <Grid>
                                    <!-- Columns -->
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <!-- LEFT SIDE -->
                                    <StackPanel Grid.Column="0">
                                        <!-- Dates -->
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                            <StackPanel Orientation="Vertical" Margin="0,0,15,0">
                                                <TextBlock Text="Start Date"
                               Foreground="{DynamicResource Forground}"
                               FontSize="12"
                               Margin="0,0,0,8"/>
                                                <Border BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="2"
                            CornerRadius="5">
                                                    <cal:CustomDatePicker x:Name="StartDatePicker" 
                                                              Width="250"
                                                              />
                                                </Border>
                                            </StackPanel>
                                            <StackPanel Orientation="Vertical">
                                                <TextBlock Text="End Date"
                               Foreground="{DynamicResource Forground}"
                               FontSize="12"
                               Margin="0,0,0,8"/>
                                                <Border BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="2"
                            CornerRadius="5">
                                                    <cal:CustomDatePicker x:Name="EndDatePicker" 
                                                              Width="250"
                                                              />
                                                </Border>
                                            </StackPanel>
                                        </StackPanel>

                                        <!-- Search and Buttons -->
                                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                            <TextBox x:Name="TxtSearch"
                         Height="35"
                         Width="300"
                         Style="{DynamicResource OutsourceSerchBar}"
                         TextChanged="TxtSearch_TextChanged"
                         VerticalContentAlignment="Center"
                         Margin="0,0,10,0"/>

                                            <Button 
                        Click="SearchAttendance_Click"
                        Style="{StaticResource ActionButton}"
                        Width="120"
                        Height="35"
                        Margin="0,0,10,0">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="âŒ•" FontSize="15" VerticalAlignment="Center" />
                                                    <TextBlock Text="Search" VerticalAlignment="Center" Margin="5,0,0,0" />

                                                </StackPanel>
                                            </Button>

                                            <Button
                        Click="ClearFilters_Click"
                        Style="{StaticResource ActionButton}"
                        Width="120"
                        Height="35">

                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="â†»" FontSize="15" VerticalAlignment="Center" />
                                                    <TextBlock Text="Clear" VerticalAlignment="Center" Margin="5,0,0,0" />

                                                </StackPanel>
                                            </Button>
                                            
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- RIGHT SIDE -->
                                    <StackPanel Grid.Column="1"
                    VerticalAlignment="Top"
                    Margin="20,0,0,0">
                                        <Button 
                    Click="RefreshAttendance_Click"
                    Style="{StaticResource ActionButton}"
                    Width="120"
                    Height="35">

                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="âŸ³" FontSize="15" VerticalAlignment="Center" />
                                                <TextBlock Text="Refresh" VerticalAlignment="Center" Margin="5,0,0,0" />

                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- ================= ATTENDANCE BOARD ================= -->
                            <Border Margin="5,20,0,0"
                  Height="360"
      Background="{DynamicResource Background}"
      BorderBrush="{DynamicResource BorderBrush}"
      BorderThickness="1"
      CornerRadius="14"
      Padding="12">

                                <DockPanel>

                                    <!-- Title -->
                                    <TextBlock Text="Attendance Records"
                 FontSize="14"
                 FontWeight="SemiBold"
                 Foreground="{DynamicResource Forground}"
                 Margin="6,0,0,12"
                 DockPanel.Dock="Top"/>

                                    <!-- TABLE -->
                                    <DataGrid x:Name="AttendanceGrid"
Background="Transparent"
RowBackground="White"
AlternatingRowBackground="#f0f0f0"
SnapsToDevicePixels="True"
AutoGenerateColumns="False"
CanUserResizeColumns="False"
ScrollViewer.CanContentScroll="True"
ScrollViewer.VerticalScrollBarVisibility="Auto"
CellStyle="{StaticResource DataGridCellStyle}"
Style="{StaticResource DataGridStyle}"
ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}"
RowStyle="{StaticResource DataGridRowStyle}"
MouseDoubleClick="AttendanceGrid_MouseDoubleClick">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Employee ID" Binding="{Binding emp_id}" Width="*" ElementStyle="{DynamicResource DataGridColumnsStyle}" />
                                            <DataGridTextColumn Header="Finger ID" Binding="{Binding finger_id}" Width="*" ElementStyle="{DynamicResource DataGridColumnsStyle}" />
                                            <DataGridTextColumn Header="Date" Binding="{Binding date}" Width="*" ElementStyle="{DynamicResource DataGridColumnsStyle}" />
                                            <DataGridTextColumn Header="Time" Binding="{Binding time}" Width="*" ElementStyle="{DynamicResource DataGridColumnsStyle}" />
                                            <DataGridTemplateColumn Header="Actions" Width="120">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                            <Button Content="âœŽ" 
                                                        Click="EditAttendance_Click"
                                                        Style="{StaticResource ActionButton}"
                                                        Width="30" Height="25" 
                                                        Margin="2"/>
                                                            <Button Content="ðŸ—‘" 
                                                        Click="DeleteAttendance_Click"
                                                        Style="{StaticResource ActionButton}"
                                                        Width="30" Height="25" 
                                                        Margin="2"/>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                        </DataGrid.Columns>
                                    </DataGrid>

                                </DockPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>

                </Grid>
            </TabItem>

            <TabItem Width="170" Header="Attendance Calculation" Style="{DynamicResource TabItem}">

                <Grid>
                    <ScrollViewer VerticalScrollBarVisibility="Auto" >
                        <Grid>
                            <StackPanel Margin="20">

                                <!-- Header -->
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                                    <Border Background="{DynamicResource ContBackground}">
                                        <TextBlock Text="Attendance Calculation"
                             Foreground="{DynamicResource Forground}"
                     FontSize="22"
                     FontWeight="SemiBold"/>
                                    </Border>
                                    <TextBlock Text="   |   Daily Analysis"
                     VerticalAlignment="Center"
                     Foreground="Gray"/>
                                </StackPanel>

                                <!-- Statistics Cards -->
                                <UniformGrid Columns="4" Margin="0,0,0,20">

                                    <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Background="{DynamicResource Background}"
                  CornerRadius="12"
                  Padding="16"
                  Margin="6">
                                        <StackPanel>
                                            <TextBlock Text="Total Employees" Foreground="Gray"/>
                                            <TextBlock Text="{Binding CalculationTotalEmployees}" FontSize="26" FontWeight="Bold" Foreground="{DynamicResource Forground}"/>
                                        </StackPanel>
                                    </Border>

                                    <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Background="{DynamicResource Background}"
  CornerRadius="12"
  Padding="16"
  Margin="6">
                                        <StackPanel>
                                            <TextBlock Text="Present" Foreground="Gray"/>
                                            <TextBlock Text="{Binding CalculationPresent}" FontSize="26" FontWeight="Bold" Foreground="LimeGreen"/>
                                        </StackPanel>
                                    </Border>

                                    <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Background="{DynamicResource Background}"
  CornerRadius="12"
  Padding="16"
  Margin="6">
                                        <StackPanel>
                                            <TextBlock Text="Absent" Foreground="Gray"/>
                                            <TextBlock Text="{Binding CalculationAbsent}" FontSize="26" FontWeight="Bold" Foreground="Red"/>
                                        </StackPanel>
                                    </Border>

                                    <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Background="{DynamicResource Background}"
  CornerRadius="12"
  Padding="16"
  Margin="6">
                                        <StackPanel>
                                            <TextBlock Text="Missing Checkout" Foreground="Gray"/>
                                            <TextBlock Text="{Binding CalculationMissingCheckout}" FontSize="26" FontWeight="Bold" Foreground="Orange"/>
                                        </StackPanel>
                                    </Border>

                                </UniformGrid>

                                <!-- Date Selection Section -->
                                <Border Background="{DynamicResource Background}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
                        Margin="5,0,0,20"
                        CornerRadius="12"
                        Padding="15">
                                    <StackPanel>
                                        <TextBlock Text="Select Date for Calculation"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource Forground}"
                                   Margin="0,0,0,15"/>

                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0" Orientation="Vertical" Margin="0,0,20,0">
                                                <TextBlock Text="Date" Foreground="{DynamicResource Forground}" FontSize="12" Margin="0,0,0,5"/>
                                                <Border BorderBrush="{DynamicResource BorderBrush}"
BorderThickness="2"
CornerRadius="5">
                                                    <cal:CustomDatePicker x:Name="CalcDatePicker" 
                                  Width="250"
                                  />
                                                </Border>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1" VerticalAlignment="Bottom" Margin="0,0,10,0">
                                                <Button Content="ðŸ“Š Calculate"
                                        Click="CalculateAttendance_Click"
                                        Style="{StaticResource ActionButton}"
                                        Width="120"
                                        Height="35"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="2" VerticalAlignment="Bottom" Margin="0,0,10,0">
                                                <Button Content="ðŸ“… Today"
                                        Click="CalculateToday_Click"
                                        Style="{StaticResource ActionButton}"
                                        Width="100"
                                        Height="35"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="3" VerticalAlignment="Bottom">
                                               
                                            </StackPanel>
                                        </Grid>
                                    </StackPanel>
                                </Border>

                                <!-- Employee Specific Search Section -->
                                <Border Background="{DynamicResource Background}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
                        Margin="5,0,0,20"
                        CornerRadius="12"
                        Padding="15">
                                    <StackPanel>
                                        <TextBlock Text="Employee Specific Attendance Search"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource Forground}"
                                   Margin="0,0,0,15"/>

                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="10"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- Employee ID Input -->
                                            <StackPanel Grid.Row="0" Orientation="Horizontal">
                                                <StackPanel Orientation="Vertical" Margin="0,0,20,0">
                                                    <TextBlock Text="Employee ID" Foreground="{DynamicResource Forground}" FontSize="12" Margin="0,0,0,5"/>
                                                    <ComboBox x:Name="CmbEmployeeId" 
                                                     Height="35"
                                                     Width="200"
                                                     Style="{DynamicResource ComboBoxFlatStyle}"
                                                     DisplayMemberPath="DisplayText"
                                                     SelectedValuePath="emp_id"
                                                     IsEditable="True"
                                                     VerticalContentAlignment="Center"
                                                     ToolTip="Select Employee ID (e.g., EMP001)"/>
                                                    
                                                    
                                                </StackPanel>

                                                <StackPanel Orientation="Vertical" Margin="0,0,20,0">
                                                    <TextBlock Text="Start Date" Foreground="{DynamicResource Forground}" FontSize="12" Margin="0,0,0,5"/>
                                                    <Border BorderBrush="{DynamicResource BorderBrush}"
                                                    BorderThickness="2"
                                                    CornerRadius="5">
                                                        <cal:CustomDatePicker x:Name="EmpStartDatePicker" 
                                                                      Width="200"/>
                                                    </Border>
                                                </StackPanel>

                                                <StackPanel Orientation="Vertical" Margin="0,0,20,0">
                                                    <TextBlock Text="End Date" Foreground="{DynamicResource Forground}" FontSize="12" Margin="0,0,0,5"/>
                                                    <Border BorderBrush="{DynamicResource BorderBrush}"
                                                    BorderThickness="2"
                                                    CornerRadius="5">
                                                        <cal:CustomDatePicker x:Name="EmpEndDatePicker" 
                                                                      Width="200"/>
                                                    </Border>
                                                </StackPanel>

                                                <StackPanel VerticalAlignment="Bottom" Margin="0,0,10,0">
                                                    <Button 
                                                    Click="SearchEmployeeAttendance_Click"
                                                    Style="{StaticResource ActionButton}"
                                                    Width="140"
                                                    Height="35">

                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="âŒ•" FontSize="15" VerticalAlignment="Center" />
                                                            <TextBlock Text="Search Employee" VerticalAlignment="Center" Margin="5,0,0,0" />
                                                           
                                                        </StackPanel>

                                                       
                                                    </Button>
                                                </StackPanel>

                                                <StackPanel VerticalAlignment="Bottom">
                                                    <Button
                                                    Click="ClearEmployeeSearch_Click"
                                                    Style="{StaticResource ActionButton}"
                                                    Width="80"
                                                    Height="35">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="â†»" FontSize="15" VerticalAlignment="Center" />
                                                            <TextBlock Text="Clear" VerticalAlignment="Center" Margin="5,0,0,0" />

                                                        </StackPanel>

                                                    </Button>
                                                    
                                                </StackPanel>
                                            </StackPanel>

                                            <!-- Search Result Info -->
                                            <StackPanel Grid.Row="2" Orientation="Horizontal">
                                                <TextBlock x:Name="TxtSearchInfo" 
                                                   Text="Enter Employee ID and date range to search specific attendance records"
                                                   Foreground="Gray"
                                                   FontSize="12"
                                                   VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Grid>
                                    </StackPanel>
                                </Border>

                                <!-- ================= CALCULATION RESULTS BOARD ================= -->
                                <Border Margin="5,20,0,0"
                  Height="400"
      Background="{DynamicResource Background}"
      BorderBrush="{DynamicResource BorderBrush}"
      BorderThickness="1"
      CornerRadius="14"
      Padding="12">

                                    <DockPanel>

                                        <!-- Title -->
                                        <TextBlock Text="Attendance Calculation Results"
                 FontSize="14"
                 FontWeight="SemiBold"
                 Foreground="{DynamicResource Forground}"
                 Margin="6,0,0,12"
                 DockPanel.Dock="Top"/>

                                        <Button Content="ðŸ“„ Export PDF"
                                                 DockPanel.Dock="Top"
                                                HorizontalAlignment="Right"
Click="ExportPdf_Click"
Style="{StaticResource ActionButton}"
Width="120"
/>

                                        <!-- CALCULATION TABLE -->
                                        <DataGrid x:Name="CalculationGrid"
Background="Transparent"
RowBackground="White"
AlternatingRowBackground="#f0f0f0"
SnapsToDevicePixels="True"
AutoGenerateColumns="False"
CanUserResizeColumns="False"
ScrollViewer.CanContentScroll="True"
ScrollViewer.VerticalScrollBarVisibility="Auto"
CellStyle="{StaticResource DataGridCellStyle}"
Style="{StaticResource DataGridStyle}"
ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}"
RowStyle="{StaticResource DataGridRowStyle}">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn Header="Employee ID" Binding="{Binding EmployeeId}" Width="*" ElementStyle="{DynamicResource DataGridColumnsStyle}" />
                                                <DataGridTextColumn Header="Employee Name" Binding="{Binding EmployeeName}" Width="*" ElementStyle="{DynamicResource DataGridColumnsStyle}" />
                                                <DataGridTextColumn Header="Date" Binding="{Binding Date}" Width="*" ElementStyle="{DynamicResource DataGridColumnsStyle}" />
                                                <DataGridTextColumn Header="First Check-in" Binding="{Binding FirstCheckIn}" Width="*" ElementStyle="{DynamicResource DataGridColumnsStyle}" />
                                                <DataGridTextColumn Header="Last Check-in" Binding="{Binding LastCheckIn}" Width="*" ElementStyle="{DynamicResource DataGridColumnsStyle}" />
                                                <DataGridTextColumn Header="Working Hours" Binding="{Binding WorkingHours, StringFormat='{}{0:hh\\:mm}'}" Width="*" ElementStyle="{DynamicResource DataGridColumnsStyle}" />
                                                <DataGridTemplateColumn Header="Status" Width="*">
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <Border CornerRadius="5" Padding="5,2" Margin="2">
                                                                <Border.Style>
                                                                    <Style TargetType="Border">
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding Status}" Value="Present">
                                                                                <Setter Property="Background" Value="LimeGreen"/>
                                                                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding Status}" Value="Absent">
                                                                                <Setter Property="Background" Value="Red"/>
                                                                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding Status}" Value="Missing Check-out">
                                                                                <Setter Property="Background" Value="Orange"/>
                                                                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </Border.Style>
                                                                <TextBlock Text="{Binding Status}" 
                                                               Foreground="White" 
                                                               FontWeight="SemiBold"
                                                               HorizontalAlignment="Center"/>
                                                            </Border>
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>
                                            </DataGrid.Columns>
                                        </DataGrid>

                                    </DockPanel>
                                </Border>
                            </StackPanel>
                        </Grid>
                      
                    </ScrollViewer>
                </Grid>

            </TabItem>

        </TabControl>



    </Grid>
</UserControl>