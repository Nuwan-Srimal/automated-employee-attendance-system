<Window x:Class="Automated_Employee_Attendance_System.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Automated_Employee_Attendance_System"
        mc:Ignorable="d"
        Background="{DynamicResource Background}"
        WindowStyle="None"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        FontFamily="{StaticResource CustomFont}"
        SnapsToDevicePixels="True"
        Title="MainWindow" Height="800" MinWidth="1200">

    <!-- WindowChrome for custom window border and rounded corners -->
    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome CaptionHeight="32"
                 CornerRadius="10"
                 ResizeBorderThickness="6"
                 GlassFrameThickness="0"
                 NonClientFrameEdges="None"/>
    </shell:WindowChrome.WindowChrome>
    
    

    
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>


        <Border Margin="5" x:Name="TitleBar" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0" 
              Background="{DynamicResource Background}">
            <DockPanel>

                <Image Source="/UI/logo.png"
         RenderOptions.BitmapScalingMode="HighQuality"/>
                <!-- App Title -->
                <TextBlock Text="Attendance System"  Foreground="{DynamicResource Forground}"  VerticalAlignment="Center" Margin="8,0"/>
                <!-- Control Panel -->



                <!-- Title bar buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">






                    <Button x:Name="Minimize" FontWeight="Bold" Content="—" Width="25" Height="25" Click="Minimize_Click" BorderBrush="Transparent" Style="{DynamicResource NavigationButtonStyle}" shell:WindowChrome.IsHitTestVisibleInChrome="True" Margin="5" Foreground="{DynamicResource Forground}" Background="Transparent"/>
                    <Button x:Name="Maximize"  FontWeight="Bold" Content="🗖" Width="25" Height="25" Click="Maximize_Click" BorderBrush="Transparent" Style="{DynamicResource NavigationButtonStyle}" shell:WindowChrome.IsHitTestVisibleInChrome="True" Margin="5" Foreground="{DynamicResource Forground}" Background="Transparent" />
                    <Button x:Name="Colose"  FontWeight="Bold" Content="🗙" Width="25" Height="25" BorderBrush="Transparent" Click="Close_Click" Style="{DynamicResource NavigationButtonStyle}" shell:WindowChrome.IsHitTestVisibleInChrome="True" Margin="5" Foreground="{DynamicResource Forground}" Background="Transparent" />
                </StackPanel>








            </DockPanel>
        </Border>

        <Grid Grid.Column="0" Grid.Row="1" Background="{DynamicResource Background}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="150" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>



          




            <StackPanel Grid.Row="0">
               

                    <StackPanel Margin="30" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">

                        <!-- Avatar -->
                        <Grid Width="66" Height="66">
                        <Image Source="/UI/logo.png"
                               RenderOptions.BitmapScalingMode="HighQuality"/>
                        <Border
                Width="30"
                Height="30"
                CornerRadius="4"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"/>
                        </Grid>

                        <!-- Text Section -->
                        <StackPanel Margin="16,0,0,0" VerticalAlignment="Center">

                            <TextBlock
                Text="Admin Portal"
                FontSize="24"
                FontWeight="SemiBold"
                Foreground="{DynamicResource Forground}"/>

                            <TextBlock
                Text="Attendance System"
                FontSize="14"
                Foreground="#8A8A8A"
                Margin="0,4,0,0"/>

                        </StackPanel>

                    </StackPanel>
           

            </StackPanel>

            <StackPanel Grid.Row="1">
                

                <!-- Dashboard -->
                <RadioButton x:Name="Dashbord_Tab" Height="44" Width="260" Click="Dashboard_Click"
                 Style="{StaticResource SelectableRadioButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE80F;"
                       FontFamily="Segoe MDL2 Assets"
                       FontSize="18"
                       
                       VerticalAlignment="Center"/>
                        <TextBlock Text="Dashboard"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Margin="12,0,0,0"
                       VerticalAlignment="Center"/>
                    </StackPanel>
                </RadioButton>

                <!-- Employee -->
                <RadioButton x:Name="Employee_Tab" Height="44" Width="260"
                
                 Click="EmployeeWindow_Click"
                 Style="{StaticResource SelectableRadioButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE77B;"
                       FontFamily="Segoe MDL2 Assets"
                       FontSize="18"
                       
                       VerticalAlignment="Center"/>
                        <TextBlock Text="Employee"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Margin="12,0,0,0"
                       VerticalAlignment="Center"/>
                    </StackPanel>
                </RadioButton>

                <!-- Attendance -->
                <RadioButton x:Name="Attendance_Tab" Height="44" Width="260"
                             Click="Attendance_Click"
                 Style="{StaticResource SelectableRadioButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE8A5;"
                       FontFamily="Segoe MDL2 Assets"
                       FontSize="18"
                       
                       VerticalAlignment="Center"/>
                        <TextBlock  Text="Attendance"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Margin="12,0,0,0"
                       VerticalAlignment="Center"/>
                    </StackPanel>
                </RadioButton>

                <!-- Reports -->
                <RadioButton x:Name="UserManagement_Tab" Height="44" Width="260"
                             Click="Report_Click"
                 Style="{StaticResource SelectableRadioButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE748;"
                       FontFamily="Segoe MDL2 Assets"
                       FontSize="18"
                       
                       VerticalAlignment="Center"/>
                        <TextBlock Text="User Management"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Margin="12,0,0,0"
                       VerticalAlignment="Center"/>
                    </StackPanel>
                </RadioButton>

                <!-- Settings -->
                <RadioButton x:Name="Settings_Tab" Height="44" Width="260"
                 Click="Settings_Click"
                 Style="{StaticResource SelectableRadioButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE713;"
                       FontFamily="Segoe MDL2 Assets"
                       FontSize="18"
                       
                       VerticalAlignment="Center"/>
                        <TextBlock Text="Settings"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Margin="12,0,0,0"
                       VerticalAlignment="Center"/>
                    </StackPanel>
                </RadioButton>

            </StackPanel>



            <StackPanel Height="100"  VerticalAlignment="Bottom" Grid.Row="2">
                <Line X1="0" Y1="0" X2="350" Y2="0" Stroke="Gray" StrokeThickness="0.5" />

                <Border Margin="10" Width="250" BorderBrush="#35D499" Background="#3335D499"  BorderThickness="1" CornerRadius="5">
                    <TextBlock x:Name="Status" FontSize="15" TextAlignment="Center" FontWeight="SemiBold" Margin="6" Foreground="#35d499"/>
                </Border>
                
                <TextBlock Text="Version 1.0.0" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,6,0,0" FontSize="12" Foreground="Gray"/>
                <TextBlock Text="© 2025 Automated Employee Attendance System" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,5,0,0" FontSize="12" Foreground="Gray"/>
            </StackPanel>

        </Grid>

        <Border Margin="15,0,15,15" CornerRadius="15" BorderThickness="1" BorderBrush="Transparent" Grid.Row="1" Grid.Column="1" Background="{DynamicResource ContBackground}">
            <Grid   >

                <Grid.Background>
                    <DrawingBrush TileMode="Tile"
               Viewport="0,0,30,30"
               ViewportUnits="Absolute"
               Stretch="None">
                        <DrawingBrush.Drawing>
                            <GeometryDrawing Brush="{DynamicResource ThemeBackgroundDotsColor}">
                                <GeometryDrawing.Geometry>
                                    <EllipseGeometry
                     Center="3,3"
                     RadiusX="1"
                     RadiusY="1"/>
                                </GeometryDrawing.Geometry>
                            </GeometryDrawing>
                        </DrawingBrush.Drawing>
                    </DrawingBrush>
                </Grid.Background>

                <Border CornerRadius="20">
                    <ContentControl  Margin="20" x:Name="MainContent"   Background="Transparent"  />
                </Border>
            </Grid>
        </Border>

       
        <!-- Main content area -->




        </Grid>
</Window>
